{
  "properties": {
      "customer": {
          "required": [
              "gender",
              "dob"
          ],
          "properties": {
              "addresses": {
                  "maxItems": 2,
                  "items": {
                      "properties": {
                          "street": {
                              "minItems": 1,
                              "items": {
                                "type": "string",
                                "minLength": 0
                              }
                          },
                          "postcode": {
                              "type": ["number", "string"]
                          },
                          "telephone": {
                              "type": ["number", "string", "null"]
                          },
                          "company": {
                              "type": ["string", "null"],
                              "minLength": 0
                          },
                          "vat_id": {
                              "type": ["string", "null"],
                              "minLength": 3
                          }
                      }
                  }
              },
              "gender": {
                  "type": "string",
                  "pattern": "[a-zA-Z0-9]+"
              },
              "dob": {
                  "type": ["string", "null"]
              },
              "newsletter": {
                  "type": "boolean"
              }
          }    
      }
  }
}
